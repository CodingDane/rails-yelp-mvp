<div class="container">
  <div class="card-trip">
    <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
    <div class="card-trip-infos">
      <div>
        <h2><%= @restaurant.name %></h2>
        <p><%= @restaurant.address %></p>
        <p><%= @restaurant.category %></p>
      </div>
      <h2 class="card-trip-pricing"><%= @restaurant.phone_number %></h2>
    </div>
  </div>
</div>


<h2>Reviews</h2>
<%= link_to "Review this restaurant", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>
<% @restaurant.reviews.each do |review| %>
<p> <%= review.rating %> </p>
<p> <%= review.content %> </p>
<% end %>

<div class="upper-right-icon">
  <%= link_to "Back to restaurants", restaurants_path, class: "btn btn-primary btn-sm" %>
</div>
